            height: 100vh;
            margin: 0;
        }

        h1 {
            font-size: 36px;
            color: #333;
            text-align: center;
        }

        #encouragement-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        #encouragement {
            font-size: 24px;
            color: #333;
        }

        #encouragement-button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #encouragement-button:hover {
            background-color: #0056b3;
        }
